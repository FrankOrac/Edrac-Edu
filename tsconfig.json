{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types",
      "./prisma/types"
    ]
  },
  "include": [
    "prisma/types",
    "prisma/**/*.ts",
    "apps/**/*",
    "packages/**/*"
  ]
}
