modules = ["nodejs-20", "web"]
run = "npm run dev"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "npm run dev"]

[workflows]
runButton = "Dev Server"

[[workflows.workflow]]
name = "Dev Server"
author = 41409425
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/api && npm run dev"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/web && npm run dev"

[[ports]]
localPort = 3000
externalPort = 80
